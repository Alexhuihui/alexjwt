<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.alexmmd.alexjwt.dao.UsersRolesDao">

    <resultMap type="top.alexmmd.alexjwt.model.UsersRoles" id="UsersRolesMap">
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="usersRolesId" column="users_roles_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UsersRolesMap">
        select
          user_id, role_id, users_roles_id
        from Test.users_roles
        where users_roles_id = #{usersRolesId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UsersRolesMap">
        select
          user_id, role_id, users_roles_id
        from Test.users_roles
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UsersRolesMap">
        select
          user_id, role_id, users_roles_id
        from Test.users_roles
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="usersRolesId != null">
                and users_roles_id = #{usersRolesId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="usersRolesId" useGeneratedKeys="true">
        insert into Test.users_roles(user_id, role_id)
        values (#{userId}, #{roleId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update Test.users_roles
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
        </set>
        where users_roles_id = #{usersRolesId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from Test.users_roles where users_roles_id = #{usersRolesId}
    </delete>

</mapper>